<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head") %>
        <!-- <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet"> -->
        <!-- <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script> -->
        <link href="/quill.snow.css" rel="stylesheet">
        <script src="/quill.js"></script>
    </head>
    <header>
        <nav class="navbar navbar-light bg-light">
            <a class="navbar-brand">
              <img src="https://i.imgur.com/btyW0xA.png" width="30" height="30" alt="">
            </a>
            <div class="btn-group mr-2" role="group">
                <button id="save" class="btn btn-secondary"><img src="https://i.imgur.com/dOJLrHD.png"></img></button>
            </div>
        </nav>
    </header>
    <body class="container">
        <main>
            <p id="hidden" style="display: none;"><%= JSON.stringify(html) %></p>
            <div id="khafraEditor"></div>
            <div class="modal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Nothing to report!</h5>
                        </div>
                        <button id="closeModal" class="btn btn-success">Close</button>
                    </div>
                </div>
            </div>
        </main>
        <style type="text/css">
            button {
                position:relative;
                width:20px;
                height:20px;
            }

            #closeModal {
                width: 15%;
                height: 5%;
                text-align: center;
            }

            button img {
                position: absolute;
                top: 50%;
                left: 50%;
                -webkit-transform: translate(-50%, -50%);
                -ms-transform: translate(-50%, -50%);
                transform: translate(-50%, -50%);
                width: 20px;
                height: 20px;
            }
        </style>
        <script>
            const quill = new Quill('#khafraEditor', {
                modules: {
                    toolbar: [
                        [{ header: [1, 2, false] }],
                        ['bold', 'italic', 'underline'],
                        ['code-block']
                    ]
                },
                placeholder: '',
                theme: 'snow'
            });

            window.onload = function() {
                try {
                    quill.setContents(JSON.parse(document.getElementById('hidden').textContent));
                } catch {}

                document.getElementById('hidden').parentNode.removeChild(document.getElementById('hidden'));
            }

            document.getElementById('save').onclick = function() {  
                if(typeof fetch === 'undefined' || typeof Promise === 'undefined') return;

                const c = quill.getContents(); 

                return fetch('../save', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ html: c.ops, key: window.location.href.split('/').pop() })
                })
                    .then(d => d.json())
                    .then(r => {
                        document.querySelector('.modal-title').textContent = r && r.success ? 'Saved document!' : r.fail;
                        document.querySelector('.modal').style.display = 'block';
                    });
            };

            document.getElementById('closeModal').onclick = function() {
                document.querySelector('.modal').style.display = 'none';
            }
        </script>

        <footer>
            <%- include("../partials/footer") %>
        </footer>
    </body>
</html>