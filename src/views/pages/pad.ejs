<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head") %>
        <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
        <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    </head>
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand"><img src="https://i.imgur.com/wlPuJjz.png" width="30" height="30" alt="Logo"></a>
        <button class="btn save">Save</button>
        <% if (authenticated) { %>
            <form class="form-inline my-2 my-lg-0" action="/logout" method="POST">
              <button class="btn btn-outline-success my-2 my-sm-0">Logout</button>
            </form>
        <% } %>
    </nav>
    <body class="container">
        <main>
            <p id="hidden" style="display: none;"><%= JSON.stringify(html) %></p>
            <div id="khafraEditor"></div>
            <div class="modal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Nothing to report!</h5>
                        </div>
                        <button id="closeModal" class="btn btn-success">Close</button>
                    </div>
                </div>
            </div>
        </main>
        <style type="text/css">
            .navbar {
                text-align: right;
            }

            #closeModal {
                width: 15%;
                height: 5%;
                text-align: center;
            }
        </style>
        <script>
            const quill = new Quill('#khafraEditor', {
                modules: {
                    toolbar: [
                        [{ header: [1, 2, false] }],
                        ['bold', 'italic', 'underline', 'strike'],
                        ['code-block', 'blockquote'],
                        [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                    ]
                },
                placeholder: '',
                theme: 'snow'
            });

            function save() {
                if(!('fetch' in window) || !('Promise' in window)) {
                    document.querySelector('.modal-title').textContent = 'Your browser does not have fetch or Promise support.';
                    document.querySelector('.modal').style.display = 'block';
                    return;
                }

                const c = quill.getContents(); 

                return fetch('../save', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ html: c.ops, name: window.location.href.split('/').pop() })
                })
                .then(function(d) { 
                    return d.json() 
                })
                .then(function(r) {
                    document.querySelector('.modal-title').textContent = r.message === true
                        ? 'Saved pad, you can now close out without losing data.'
                        : r.message;
                    document.querySelector('.modal').style.display = 'block';
                });
            }

            window.addEventListener('load', function() {
                let content = document.getElementById('hidden').innerHTML;
                while(typeof content === 'string') {
                    content = JSON.parse(content);
                }
                quill.setContents(content);
                document.getElementById('hidden').parentNode.removeChild(document.getElementById('hidden'));
            });

            document.getElementById('closeModal').addEventListener('click', function() {
                document.querySelector('.modal').style.display = 'none';
            });

            document.querySelector('.save').addEventListener('click', save);
            document.addEventListener('keydown', function(e) {
                if(e.ctrlKey && e.key.toLowerCase() === 's') {
                    e.preventDefault();
                    return save();
                }
            });
        </script>

        <footer>
            <%- include("../partials/footer") %>
        </footer>
    </body>
</html>