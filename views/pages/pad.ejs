<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head") %>
        <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
        <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

        <link href="/css/pad.css" rel="stylesheet" type="text/css">
        <script src="/js/format.js"></script>
    </head>
    <header>
        <nav class="navbar navbar-light bg-light">
            <a class="navbar-brand">
              <img src="https://i.imgur.com/btyW0xA.png" width="30" height="30" alt="">
            </a>
            <div class="btn-group mr-2" role="group">
                <button id="save" class="btn btn-secondary"><img src="https://i.imgur.com/dOJLrHD.png"></img></button>
            </div>
        </nav>
    </header>
    <body class="container">
        <main>
            <p id="hidden" style="display: none;"><%= JSON.stringify(html) %></p>
            <div id="khafraEditor"></div>
            <!-- <textarea name="magicBox" oninput="format(this)"></textarea> -->
            <div class="modal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Nothing to report!</h5>
                            <p id="errorMessage"></p>
                        </div>
                    </div>
                </div>
            </div>

        </main>
        <script>
            var quill = new Quill('#khafraEditor', {
                modules: {
                    toolbar: [
                        [{ header: [1, 2, false] }],
                        ['bold', 'italic', 'underline'],
                        ['image', 'code-block']
                    ]
                },
                placeholder: '',
                theme: 'snow'
            });

            window.onload = function() {
                const html = document.getElementById('hidden').textContent;
                const temp = JSON.parse(html);

                for(const o of temp) {
                    if(o.insert) o.insert = decodeURIComponent(o.insert);
                }
                
                quill.setContents(temp);
            }

            document.getElementById('save').onclick = function() { save(quill); };
        </script>

        <footer>
            <%- include("../partials/footer") %>
        </footer>
    </body>
</html>